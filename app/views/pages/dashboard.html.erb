<div class="container">
  <h1 class="header-dashboard"><%= "Hello, #{current_user.username}. How are you?" %></h1>

  <div class="row justify-content-between">
  
    <div class="col-sm-12 col-lg-4">
      <div class="row">
        <div class="profile">
          <%= cl_image_tag current_user.avatar.key, class: "avatar-dashboard" %>
          <h2>Welcome on your logbook.</h2>
          <p><%= "." * 75 %></p>
          <p><%= "Email - #{current_user.email}" %></p>
          <p><%= "." * 75 %></p>
          <p>Password - ******</p>
          <p><%= "." * 75 %></p>
          <p><%= "." * 75 %></p>
          <p><%= "Punchline - \"#{current_user.bio}\""%></p>
          <p><%= "." * 75 %></p>
          <p><%= "." * 75 %></p>
          <p><%= "." * 75 %></p>
          <p>To-Do</p>
          <p><%= "." * 75 %></p>
          <p><%= "." * 75 %></p>
          <p><%= "." * 75 %></p>
          <p><%= "." * 75 %></p>
          <p><%= "." * 75 %></p>
          <p><%= "." * 75 %></p>
          <p>Dad jokes</p>
          <p><%= "." * 75 %></p>
          <p><%= "." * 75 %></p>
          <p><%= "." * 75 %></p>
          <p><%= "." * 75 %></p>
          <p><%= "." * 75 %></p>
          <p><%= "." * 75 %></p>
        </div>
      </div>
    </div>

    <div class="bookings col-sm-12 col-lg-8">

      <h2>THEY BOOKED WITH ME</h2>
        <% if @bookings_owner.present? %>
          <div class="row">
            <% @bookings_owner.each do |booking| %>

              <div class="col-sm-6">
                <div class="card-power mb-5">
                  <%= cl_image_tag booking.service.photos.first.key %>
                  <div class="card-power-infos">
                    <div>
                      <h2><%= link_to booking.service.name, service_path(@bookings_owner) %></h2>
                    </div>
                      <h2 class="card-power-date"><%= booking.start_date %></h2>
                      <%= cl_image_tag booking.user.avatar.key, class: "card-trip-user avatar-bordered" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <h3>No pending book for now...</h3>
        <% end %>

      <h2>I BOOKED WITH</h2>
        <% if @bookings_owner.present? %>
          <div class="row">
            <% @bookings_client.each do |booking| %>
              <div class="col-sm-6">
                <div class="card-power mb-5">
                  <%= cl_image_tag booking.service.photos.first.key %>
                  <div class="card-power-infos">
                    <%= booking.user.username  %>
                    <%= booking.service.name %>
                    <h2 class="card-power-date"><%= booking.start_date %></h2>
                  </div>
               </div>
              </div>
            <% end %>
        </div>
        <% else %>
          <h3>You have booked nothing yet...</h3>
        <% end %>

      <h2>WHAT I PROPOSE</h2>
    </div>
</div>


