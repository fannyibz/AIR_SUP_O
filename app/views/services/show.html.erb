<div class="container">

  <%= link_to "Back to power list", services_path, class: "btn btn-primary" %>

  <% if policy(@service).edit? %>
    <%= link_to "Edit this service", edit_service_path, class: "btn btn-primary" %>
  <% end %>

  <br>

  <% if policy(@service).destroy? %>
    <%= link_to "Delete #{@service.name}",
                service_path(@service),
                class: "btn btn-primary",
                method: :delete,
                data: { confirm: "Are you sure?" } %>
  <% end %>

  <h1 class= "text-centered"> ü¶∏‚Äç‚ôÇÔ∏è Super service details ü¶∏‚Äç‚ôÄÔ∏è </h1>

    <div class="container card-show-power">
      <div class="row">
        <div class="col-4 card-show-power">

          <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
              <%# @service.photos.each do |photo| %>
              <div class="carousel-item active">
                <% if @service.photos[0] %>
                  <%= cl_image_tag @service.photos[0].key, class: "d-block w-100" %>
                <% end %>
              </div>
              <%# end %>
              <div class="carousel-item">
                <% if @service.photos[1] != nil %>
                  <%= cl_image_tag @service.photos[1].key, class: "d-block w-100" %>
                <% else %>
                  <%= cl_image_tag @service.photos[0].key, class: "d-block w-100" %>
                <% end %>
              </div>
              <div class="carousel-item">
                <% if @service.photos[2] != nil %>
                  <%= cl_image_tag @service.photos[2].key, class: "d-block w-100" %>
                <% else %>
                  <%= cl_image_tag @service.photos[0].key, class: "d-block w-100" %>
                <% end %>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>

        </div>

        <div class="col-8">
          <div class="all">

            <div>
              <h2 class= "title-big"><%= @service.name.capitalize %></h2>
              <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="avatar-bordered" />
            </div>

            <div>
              <h3><i class="fas fa-bolt"></i> What do I offer?</h3>
              <p><%= @service.description %></p>
              <br>
              <h3><i class="fas fa-map-marked-alt"></i> Where?</h3>
              <p>this service is available in</p>
              <p><%= @service.address %></p>
              <br>
              <h3><i class="fas fa-money-check-alt"></i> Price: <%= @service.price %>‚Ç¨</h3>
            </div>

          </div>
        </div>
      </div>
    </div>

    <div class="calendar" id="book-power">
      <% if current_user != @service.user %>
        <%= simple_form_for ([@service, @booking]) do |f| %>
          <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker", id: "range_start"} %>
          <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker", id: "range_end"} %>
          <%= f.button :submit, "Book this power!", class: "normal-btn" %>
        <% end %>
      <% end %>
    </div>

    </div>
  </div>
</div>






